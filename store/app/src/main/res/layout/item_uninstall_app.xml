<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/item_uninstall_app_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:width="20dp" />
    <ImageView

        android:id="@+id/item_uninstall_app_iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_uninstall_app_tv_name"
            android:layout_width="wrap_content"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/item_uninstall_app_tv_version"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="3" />
        <TextView
            android:id="@+id/item_uninstall_app_tv_size"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_uninstall_app_tv_uninstall"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="#FFFFFFFF"
            android:elevation="0dp"
            android:text="卸载"
            android:textColor="#FFDD0000"
            app:cornerRadius="25dp"
            app:strokeColor="#FFDD0000"
            app:strokeWidth="1dp" />
    </LinearLayout>
</LinearLayout>